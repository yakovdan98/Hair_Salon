@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>No Stylists listed yet!</h3>
}

<ul>
  @foreach (Stylist item in Model)
  {
    <li>@Html.ActionLink($"{item.Name}", "Details", new { id = item.StylistId })</li>
  }
</ul>

<h3>@Html.ActionLink("Add Stylist", "Create")</h3>
<h3>@Html.ActionLink("Home", "Index", "Home")</h3>