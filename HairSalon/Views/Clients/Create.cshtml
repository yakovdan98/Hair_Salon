@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h1>Add a Client</h1>

<h3>Stylists are need to add new clients</h3>
@Html.ActionLink("Add a Stylist", "Create", "Stylists")



@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")

  <input type="submit" value="Add" class="btn btn-default" />
}
